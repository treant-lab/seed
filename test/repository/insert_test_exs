defmodule SeedTest.Repository.Insert do
  use ExUnit.Case, async: true
  alias Seed.Entities.Repository.Aggregates.Field
  alias Seed.Database.Repo

  test "should insert the data when the params is right" do
    random_string = for _ <- 1..10, into: "", do: <<Enum.random('0123456789abcdef')>>

    fields = [
      %{name: "username", type: "string", required: true},
      %{name: "password", type: "string", required: true},
      %{name: "email", type: "string", required: true},
      %{name: "age", type: "number", required: true}
    ]
    name = "Example#{random_string}"

    assert {:ok, entity} =
             Seed.Entities.Services.Creation.call(%{
               name: name,
               color: "#ffffff"
             })

    assert {:ok, fields} = Field.create_fields(entity, fields)

    Seed.Server.Repository.Client.insert(name, %{username: "Hello", password: "HEHEHE", email: "dev@dev.com", age: 20}, self())
  end
end
